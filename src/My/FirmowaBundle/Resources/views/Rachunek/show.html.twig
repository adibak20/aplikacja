{% extends '::base.html.twig' %} 
{% block body %}
<h1>Rachunek</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Data_wystawienia</th>
            <td>{{ entity.datawystawienia|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Numer_rachunku</th>
            <td>{{ entity.numerrachunku }}</td>
        </tr>
        <tr>
            <th>Nazwa_usugi</th>
            <td>{{ entity.nazwausugi }}</td>
        </tr>
        <tr>
            <th>Kwota</th>
            <td>{{ entity.kwota }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('rachunek') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('rachunek_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('rachunek_wystaw', { 'id': entity.id }) }}">
            Wystaw Rachunek
        </a>
    </li>
    <li>
        <form action="{{ path('rachunek_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
