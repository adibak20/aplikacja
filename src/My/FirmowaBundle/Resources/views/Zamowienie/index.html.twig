{% extends '::base.html.twig' %} 
{% block body %}
<h1>Zamowienie list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data_przyjecia</th>
            <th>Data_odbioru</th>
            <th>Usterka</th>
            <th>Numer_zamowienia</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('zamowienie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.dataprzyjecia %}{{ entity.dataprzyjecia|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.dataodbioru %}{{ entity.dataodbioru|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.Usterka }}</td>
            <td>{{ entity.numerzamowienia }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('zamowienie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('zamowienie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('zamowienie_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}